<% include ../partials/header %>

<div class="container" style="width: 40%;">
    <h2>Edit the comment</h2>
    <hr>
    <form action="/products/<%= product_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="control-label" for="comment">Comment</label>
            <input class="form-control" id="comment" type="text" name="comment[text]" value="<%= comment.text%>">
        </div>
        
        <div class="form-group">
            <button class="btn btn-primary btn-md btn-block">Submit</button>
        </div>
    </form>
    
    <p><a href="/products/<%= product_id %>">go back</a></p>
</div>

<% include ../partials/footer %>