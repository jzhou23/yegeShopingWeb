<% include ../partials/header %>

<div class="container" style="width: 40%;">
    <h2>Add a comment for <%= product.title %></h2>
    <hr>
    <form action="/products/<%= product._id %>/comments" method="POST">
        <div class="form-group">
            <label class="control-label" for="comment">Comment</label>
            <input class="form-control" id="comment" type="text" name="comment[text]">
        </div>
        
        <div class="form-group">
            <button class="btn btn-primary btn-md btn-block">Submit</button>
        </div>
    </form>
    
    <p><a href="/products/<%= product._id %>">go back</a></p>
</div>

<% include ../partials/footer %>